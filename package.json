{
  "name": "iot-management-system",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "^18.15.0"
  },
  "scripts": {
    "prebuild": "prisma generate",
    "build:1-next": "cross-env NODE_ENV=production next build",
    "build:2-server": "tsc --project tsconfig.server.json",
    "build": "run-s build:*",
    "dev:next": "next dev",
    "dev": "pnpm migrate-dev && run-p dev:*",
    "db-up": "docker-compose up -d",
    "db-seed": "prisma db seed",
    "db-migrate-dev": "prisma migrate dev",
    "db-nuke": "docker-compose down --volumes --remove-orphans",
    "dx": "run-s db-up db-migrate-dev db-seed dev",
    "dev-nuke": "rm -rf prisma/*.db**",
    "generate": "prisma generate",
    "migrate-dev": "prisma migrate dev",
    "migrate": "prisma migrate deploy",
    "start": "cross-env NODE_ENV=production node src/server/prodServer.ts",
    "studio": "prisma studio",
    "lint": "eslint --cache --ext \".js,.ts,.tsx\" --report-unused-disable-directives --report-unused-disable-directives src",
    "lint-fix": "pnpm lint --fix",
    "postinstall": "prisma generate"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "all",
    "singleQuote": true
  },
  "dependencies": {
    "@chakra-ui/next-js": "^2.2.0",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@prisma/client": "^5.16.0",
    "@tanstack/react-query": "^4.18.0",
    "@trpc/client": "^10.44.1",
    "@trpc/next": "^10.44.1",
    "@trpc/react-query": "^10.44.1",
    "@trpc/server": "^10.44.1",
    "@uiw/react-baidu-map": "^2.7.0",
    "@workos-inc/node": "^4.0.0",
    "apexcharts": "^3.45.1",
    "clsx": "^2.0.0",
    "framer-motion": "^11.0.20",
    "jose": "^5.1.3",
    "moment": "^2.30.1",
    "mqtt": "^5.3.3",
    "next": "^14.1.1",
    "openapi-trpc": "^0.1.2",
    "react": "^18.2.0",
    "react-apexcharts": "^1.4.1",
    "react-dom": "^18.2.0",
    "superjson": "^1.12.4",
    "tsx": "^4.0.0",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.26.1",
    "@tanstack/react-query-devtools": "^4.18.0",
    "@types/node": "^18.16.16",
    "@types/react": "^18.2.33",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "autoprefixer": "^10.4.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.40.0",
    "eslint-config-next": "^14.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "^2.8.8",
    "prisma": "^4.14.1",
    "start-server-and-test": "^1.12.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.1.3"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
